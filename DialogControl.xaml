<UserControl x:Class="MiniMica.DialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniMica"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="480">

    <!-- Resource Dictionary for Common Styles -->
    <Control.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="BaseWindow/MiniMicaTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Control.Resources>

    <Grid x:Name="CtrlRoot" Background="Transparent">

        <!-- Title -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="60">
            <TextBlock x:Name="textSettings" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="{x:Static local:Strings.settings_title}" FontSize="24" FontWeight="SemiBold" Foreground="Black"/>
        </Grid>

        <!-- 1. Appearance -->
        <Grid Margin="30,90,30,60" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="textGlyph1" Padding="0,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Text="&#xE790;" FontSize="16" FontFamily="Segoe Fluent Icons" Foreground="Black"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="textOption1" Padding="0,0,0,14" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Text="{x:Static local:Strings.settings_appearance}" FontSize="14" Foreground="Black" Focusable="True" />
            <RadioButton Grid.Column="2" x:Name="radioAuto" Content="{x:Static local:Strings.settings_appearance_auto}" FontSize="14" IsChecked="True" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,14,0" GroupName="grpAppearance" Click="RadioAuto_Click"/>
            <RadioButton Grid.Column="3" x:Name="radioLight" Content="{x:Static local:Strings.settings_appearance_light}" FontSize="14" IsChecked="False" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,14,0" GroupName="grpAppearance"  Click="RadioLight_Click"/>
            <RadioButton Grid.Column="4" x:Name="radioDark" Content="{x:Static local:Strings.settings_appearance_dark}" FontSize="14" IsChecked="False" HorizontalAlignment="Right" VerticalAlignment="Top" GroupName="grpAppearance"  Click="RadioDark_Click"/>
        </Grid>

        <!-- 2. Notification -->
        <Grid Margin="30,120,30,60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="textGlyph2" Padding="0,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Text="&#xF2A3;" FontSize="16" FontFamily="Segoe Fluent Icons" Foreground="Black"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="textOption2" Padding="0,0,0,14" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Text="{x:Static local:Strings.settings_notification}" FontSize="14" Foreground="Black" Focusable="True"/>
            <CheckBox Grid.Row="1" Grid.Column="2" x:Name="checkNotification" HorizontalAlignment="Right" VerticalAlignment="Top" IsChecked="True" Margin="0,0,0,0" Click="CheckNotification_Click"/>
        </Grid>

        <!-- 3. Diagnostics -->
        <Grid Margin="30,150,30,60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="textGlyph3" Padding="0,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Text="&#xE9D9;" FontSize="16" FontFamily="Segoe Fluent Icons" Foreground="Black"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="textOption3" Padding="0,0,0,14" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Text="{x:Static local:Strings.settings_telemetry}" FontSize="14" Foreground="Black" Focusable="True" />
            <CheckBox Grid.Row="1" Grid.Column="2" x:Name="checkDiagnostics" HorizontalAlignment="Right" VerticalAlignment="Top" IsChecked="False" Margin="0,0,0,0" Click="CheckDiagnostics_Click"/>
        </Grid>

        <!-- 4. Language (Invisible) -->
        <Grid x:Name="TestOnly" Margin="30,180,30,60" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="textGlyph4" Padding="0,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Text="&#xF2B7;" FontSize="16" FontFamily="Segoe Fluent Icons" Foreground="Purple"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="textOption4" Padding="0,0,0,14" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Text="{x:Static local:Strings.settings_language}" FontSize="14" Foreground="Purple" Focusable="True"/>
            <ComboBox Grid.Row="1" Grid.Column="2" x:Name="comboLanguage" SelectedValuePath="Tag" HorizontalAlignment="Right"  VerticalAlignment="Top" Margin="0,0,0,0" Width="180" Foreground="Purple" SelectionChanged="OnLanguageChanged">
                <ComboBoxItem Content="System Default (00)" Tag="00" IsSelected="True" />
                <ComboBoxItem Content="English (en)" Tag="en" />
                <Separator />
                <ComboBoxItem x:Name="zh" Content="Chinese (zh)" Tag="zh" />
                <ComboBoxItem Content="Chinese PRC (zh-CN)" Tag="zh-CN" />
                <ComboBoxItem Content="Dutch (nl)" Tag="nl" />
                <ComboBoxItem Content="French (fr)" Tag="fr" />
                <ComboBoxItem Content="German (de)" Tag="de" />
                <ComboBoxItem Content="Italian (it)" Tag="it" />
                <ComboBoxItem Content="Polish (pl)" Tag="pl" />
                <ComboBoxItem Content="Portuguese (pt)" Tag="pt" />
                <ComboBoxItem Content="Portuguese - Portugal (pt-PT)" Tag="pt-PT" />
                <ComboBoxItem Content="Russian (ru)" Tag="ru" />
                <ComboBoxItem Content="Spanish (es)" Tag="es" />
                <ComboBoxItem Content="Spanish - Spain (es-ES)" Tag="es-ES" />
                <ComboBoxItem Content="Ukrainian (uk)" Tag="uk" />
                <Separator />
                <ComboBoxItem Content="Danish (da)" Tag="da" />
                <ComboBoxItem Content="Czech (cs)" Tag="cs" />
                <ComboBoxItem Content="Finnish (fi)" Tag="fi" />
                <ComboBoxItem Content="Japanese (ja)" Tag="ja" />
                <ComboBoxItem Content="Korean (ko)" Tag="ko" />
                <ComboBoxItem Content="Norwegian (nb)" Tag="nb" />
                <ComboBoxItem Content="Swedish (sv)" Tag="sv" />
                <ComboBoxItem Content="Turkish (tr)" Tag="tr" />
                <Separator />
                <ComboBoxItem Content="Indonesian (id)" Tag="id" />
                <ComboBoxItem Content="Thai (th)" Tag="th" />
                <ComboBoxItem Content="Vietnamese (vi)" Tag="vi" />
                <Separator />
                <ComboBoxItem Content="Arabic (ar)" Tag="ar" />
            </ComboBox>
        </Grid>

        <TextBlock x:Name="textVersion" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" Text="{x:Static local:Strings.settings_version}" FontSize="12" Foreground="#808080" Focusable="True" />

    </Grid>

</UserControl>
